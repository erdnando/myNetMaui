<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MiAppMaui.ViewModels"
             x:Class="MiAppMaui.Views.UIControlsPage"
             x:DataType="vm:UIControlsViewModel"
             Title="{Binding Title}">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            
            <!-- Header -->
            <Label Text="ðŸŽ¨ Controles Modernos"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"/>

            <!-- Feedback Message -->
            <Frame Padding="15"
                   BackgroundColor="{StaticResource Primary}"
                   CornerRadius="15"
                   HasShadow="True">
                <Label Text="{Binding FeedbackMessage}"
                       FontSize="16"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"/>
            </Frame>

            <!-- Gradient Buttons -->
            <Label Text="Botones con Gradiente"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>
            
            <Border StrokeThickness="0"
                    HeightRequest="60"
                    Margin="0,5,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#667eea" Offset="0.0" />
                        <GradientStop Color="#764ba2" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Button Text="Gradiente Violeta ðŸ’œ"
                        Command="{Binding GradientButtonClickedCommand}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"/>
            </Border>

            <Border StrokeThickness="0"
                    HeightRequest="60">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#f093fb" Offset="0.0" />
                        <GradientStop Color="#f5576c" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Button Text="Gradiente Rosa ðŸ’—"
                        Command="{Binding GradientButtonClickedCommand}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"/>
            </Border>

            <Border StrokeThickness="0"
                    HeightRequest="60">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#4facfe" Offset="0.0" />
                        <GradientStop Color="#00f2fe" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <Button Text="Gradiente Azul ðŸ’™"
                        Command="{Binding GradientButtonClickedCommand}"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"/>
            </Border>

            <!-- Glass Morphism Card -->
            <Label Text="Glass Morphism"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>
            
            <Border StrokeThickness="2"
                    HeightRequest="150"
                    BackgroundColor="#80FFFFFF"
                    Margin="0,5,0,0">
                <Border.Stroke>
                    <LinearGradientBrush>
                        <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
                        <GradientStop Color="#80FFFFFF" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Stroke>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="0,10"
                            Radius="20"
                            Opacity="0.3"/>
                </Border.Shadow>
                <VerticalStackLayout Padding="20" Spacing="10" VerticalOptions="Center">
                    <Label Text="âœ¨ Efecto Glass"
                           FontSize="22"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Button Text="Â¡TÃ³came!"
                            Command="{Binding GlassButtonClickedCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="10"
                            WidthRequest="150"
                            HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <!-- Neumorphic Cards -->
            <Label Text="Neumorphic Design"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>

            <Frame Padding="20"
                   BackgroundColor="#E0E5EC"
                   CornerRadius="20"
                   HasShadow="False"
                   Margin="0,5,0,0">
                <Frame.Shadow>
                    <Shadow Brush="#A3B1C6"
                            Offset="-5,-5"
                            Radius="10"
                            Opacity="0.5"/>
                </Frame.Shadow>
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸŽ­ BotÃ³n Neumorphic"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#4A5568"/>
                    <Button Text="Presionar"
                            Command="{Binding NeumorphicButtonClickedCommand}"
                            BackgroundColor="#E0E5EC"
                            TextColor="#4A5568"
                            CornerRadius="15"
                            FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Interactive Controls -->
            <Label Text="Controles Interactivos"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>

            <!-- Slider -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource Secondary}"
                   CornerRadius="15"
                   Margin="0,5,0,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding SliderValue, StringFormat='ðŸ“Š Slider: {0:F0}%'}"
                           FontSize="18"
                           TextColor="White"
                           FontAttributes="Bold"/>
                    <Slider Value="{Binding SliderValue}"
                            Minimum="0"
                            Maximum="100"
                            ThumbColor="White"
                            MinimumTrackColor="White"
                            MaximumTrackColor="#80FFFFFF"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Switch -->
            <Frame Padding="20"
                   BackgroundColor="{StaticResource Tertiary}"
                   CornerRadius="15">
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Label Text="âœ… Switch:"
                           FontSize="18"
                           TextColor="White"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <Switch IsToggled="{Binding SwitchValue}"
                            OnColor="White"
                            ThumbColor="{StaticResource Tertiary}"/>
                    <Label Text="{Binding SwitchValue, Converter={StaticResource BoolToStringConverter}, ConverterParameter='ON|OFF'}"
                           FontSize="16"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Stepper -->
            <Frame Padding="20"
                   BackgroundColor="#FF6B6B"
                   CornerRadius="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding StepperValue, StringFormat='ðŸ”¢ Contador: {0:F0}'}"
                           FontSize="18"
                           TextColor="White"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Stepper Value="{Binding StepperValue}"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"
                             HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Color Selection -->
            <Label Text="Selector de Colores"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>

            <FlexLayout Wrap="Wrap"
                       JustifyContent="SpaceEvenly"
                       AlignItems="Center">
                <Frame Padding="0"
                       HeightRequest="80"
                       WidthRequest="80"
                       CornerRadius="40"
                       BackgroundColor="#667eea"
                       HasShadow="True"
                       Margin="5">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ColorSelectedCommand}"
                                            CommandParameter="Azul"/>
                    </Frame.GestureRecognizers>
                    <Label Text="ðŸ’™"
                           FontSize="40"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>

                <Frame Padding="0"
                       HeightRequest="80"
                       WidthRequest="80"
                       CornerRadius="40"
                       BackgroundColor="#f093fb"
                       HasShadow="True"
                       Margin="5">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ColorSelectedCommand}"
                                            CommandParameter="Rosa"/>
                    </Frame.GestureRecognizers>
                    <Label Text="ðŸ’—"
                           FontSize="40"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>

                <Frame Padding="0"
                       HeightRequest="80"
                       WidthRequest="80"
                       CornerRadius="40"
                       BackgroundColor="#43e97b"
                       HasShadow="True"
                       Margin="5">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ColorSelectedCommand}"
                                            CommandParameter="Verde"/>
                    </Frame.GestureRecognizers>
                    <Label Text="ðŸ’š"
                           FontSize="40"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>

                <Frame Padding="0"
                       HeightRequest="80"
                       WidthRequest="80"
                       CornerRadius="40"
                       BackgroundColor="#f5576c"
                       HasShadow="True"
                       Margin="5">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ColorSelectedCommand}"
                                            CommandParameter="Rojo"/>
                    </Frame.GestureRecognizers>
                    <Label Text="â¤ï¸"
                           FontSize="40"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Frame>
            </FlexLayout>

            <Frame Padding="15"
                   BackgroundColor="{StaticResource Gray100}"
                   CornerRadius="10"
                   Margin="0,10,0,20">
                <Label Text="{Binding SelectedColor, StringFormat='Color seleccionado: {0}'}"
                       FontSize="16"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"/>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
